{
  "compilerOptions": {
    /* Configurações Principais */
    "target": "ES2022",              // Versão moderna do JS para Node 22
    "module": "NodeNext",            // Essencial para funcionar com "type": "module"
    "moduleResolution": "NodeNext",  // Define como o TS acha os arquivos
    
    /* Pastas */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interoperabilidade */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}